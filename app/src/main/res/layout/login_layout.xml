<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:text="管理员登录"
        android:textColor="#000000"
        android:textSize="32sp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/pass_word"
        android:layout_below="@+id/content"
        android:layout_marginTop="20dp"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:textSize="15sp"
        android:padding="10dp"
        android:background="@drawable/shape_input"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/device_info"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="设备管理密码由运营商提供，可联系相关人员获取"
        android:layout_alignLeft="@+id/pass_word"
        android:layout_alignStart="@+id/pass_word"
        android:layout_below="@+id/pass_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/content"
        android:textSize="15sp"
        android:text="请输入设备管理密码："
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/pass_word"
        android:layout_alignStart="@+id/pass_word" />

    <Button
        android:id="@+id/login_btn"
        android:text="登 录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="70dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/device_info"
        android:background="@drawable/shape_btn"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
